@{
    ViewData["Title"] = "Home Page";
}
<head>
  <link rel="stylesheet" href="~/css/index.css" type="text/css" />
</head>

<div class="text-center">
    <h1 class="display-4">Weather Data</h1>
    <p>Enter a location to get its weather data</p>
    
    
    <form method="post" id="theForm" >
        <fieldset>
          <legend>Get Weather Info</legend>
          <div>
            <label for="city">City:</label>
            <input type="text" name="city" value="" required/>
          </div>
          <div>
            <label for="zip">Zip Code:</label>
            <input type="text" maxlength=5 minlength=5 name="zip" value="" required/>
          </div>
          <div>
            <label for="state">State Code:</label>
            <input type="text" maxlength=2 minlength=2 name="state" value="" required/>
          </div>
          <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
          </div>
        </fieldset>
      </form>
      
</div>
<div class="loader hidden"></div>

<script src="~/js/index.js" asp-append-version="true"></script>

